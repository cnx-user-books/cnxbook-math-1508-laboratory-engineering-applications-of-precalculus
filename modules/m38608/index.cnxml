                          </m:mrow>
                        </m:mstyle>
                        <m:mo stretchy="false">=</m:mo>
                        <m:mtext>10</m:mtext>
                      </m:mrow>
                      <m:mi/>
                      <m:msub>
                        <m:mtext>log</m:mtext>
                        <m:mstyle fontsize="8pt">
                          <m:mrow>
                            <m:mtext>10</m:mtext>
                          </m:mrow>
                        </m:mstyle>
                      </m:msub>
                      <m:mfenced open="(" close=")">
                        <m:mfrac>
                          <m:msub>
                            <m:mi>P</m:mi>
                            <m:mstyle fontsize="8pt">
                              <m:mrow>
                                <m:mstyle fontstyle="italic">
                                  <m:mrow>
                                    <m:mtext>output</m:mtext>
                                  </m:mrow>
                                </m:mstyle>
                              </m:mrow>
                            </m:mstyle>
                          </m:msub>
                          <m:msub>
                            <m:mi>P</m:mi>
                            <m:mstyle fontsize="8pt">
                              <m:mrow>
                                <m:mstyle fontstyle="italic">
                                  <m:mrow>
                                    <m:mtext>input</m:mtext>
                                  </m:mrow>
                                </m:mstyle>
                              </m:mrow>
                            </m:mstyle>
