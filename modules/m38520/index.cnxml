                          <m:mstyle fontsize="8pt">
                            <m:mrow>
                              <m:mn>2</m:mn>
                            </m:mrow>
                          </m:mstyle>
                        </m:msup>
                      </m:mfrac>
                      <m:mi/>
                      <m:mtext>.</m:mtext>
                    </m:mrow>
