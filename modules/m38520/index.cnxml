                            <m:mrow>
                              <m:msup>
                                <m:mtext>Coulomb</m:mtext>
                                <m:mstyle fontsize="8pt">
                                  <m:mrow>
                                    <m:mn>2</m:mn>
                                  </m:mrow>
                                </m:mstyle>
