                              </m:mrow>
                            </m:mtd>
                            <m:mtd>
                              <m:mrow>
                                <m:mrow>
                                  <m:mn>2</m:mn>
                                  <m:mo stretchy="false">/</m:mo>
                                  <m:mn>5</m:mn>
                                </m:mrow>
                                <m:mrow/>
                              </m:mrow>
