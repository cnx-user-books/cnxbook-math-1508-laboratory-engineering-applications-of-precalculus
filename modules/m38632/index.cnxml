                          </m:mtr>
                        </m:mtable>
                        <m:mi/>
                        <m:mtable>
                          <m:mtr>
                            <m:mtd>
                              <m:mrow>
                                <m:mn>0</m:mn>
                                <m:mrow/>
                              </m:mrow>
                            </m:mtd>
                          </m:mtr>
                          <m:mtr>
                            <m:mtd>
                              <m:mrow>
                                <m:mrow>
                                  <m:mtext>24</m:mtext>
                                  <m:mo stretchy="false">/</m:mo>
                                  <m:mn>5</m:mn>
                                </m:mrow>
                                <m:mrow/>
