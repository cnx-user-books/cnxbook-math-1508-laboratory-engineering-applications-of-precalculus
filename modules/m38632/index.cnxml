                              </m:mrow>
                            </m:mtd>
                          </m:mtr>
                          <m:mtr>
                            <m:mtd>
                              <m:mrow>
                                <m:mo stretchy="false">−</m:mo>
                                <m:mn>8</m:mn>
                              </m:mrow>
                            </m:mtd>
                          </m:mtr>
                        </m:mtable>
                      </m:mfenced>
                    </m:mrow>
                  </m:mrow>
                </m:mstyle>
                <m:mrow/>
              </m:mrow>
              <m:annotation encoding="StarMath 5.0"> size 12{A rSup { size 8{ - 1} } `A` left [ matrix {
v rSub { size 8{1} }  {} ##
v rSub { size 8{2} } 
}  right ]=A rSup { size 8{ - 1} } ` left [ matrix {
