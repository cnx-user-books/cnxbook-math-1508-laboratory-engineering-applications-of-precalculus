                <m:mrow/>
              </m:mrow>
              <m:annotation encoding="StarMath 5.0"> size 12{ left ( matrix {
1 {} # 1 {} # 1 {} ##
0 {} # 1 {} # 2/5 {} ##
0 {} # 0 {} # "36"/5{}
} ~ matrix {
0 {} ##
"24"/5 {} ##
"72"/5
}  right )} {}</m:annotation>
            </m:semantics>
          </m:math>
