                      </m:msup>
                      <m:mi/>
                      <m:mi>A</m:mi>
                      <m:mi/>
                      <m:mrow>
                        <m:mfenced open="[" close="]">
                          <m:mtable>
                            <m:mtr>
                              <m:mtd>
                                <m:mrow>
                                  <m:msub>
                                    <m:mi>v</m:mi>
                                    <m:mstyle fontsize="8pt">
                                      <m:mrow>
                                        <m:mn>1</m:mn>
                                      </m:mrow>
                                    </m:mstyle>
                                  </m:msub>
                                  <m:mrow/>
                                </m:mrow>
                              </m:mtd>
                            </m:mtr>
                            <m:mtr>
                              <m:mtd>
                                <m:msub>
                                  <m:mi>v</m:mi>
                                  <m:mstyle fontsize="8pt">
                                    <m:mrow>
                                      <m:mn>2</m:mn>
                                    </m:mrow>
                                  </m:mstyle>
                                </m:msub>
                              </m:mtd>
                            </m:mtr>
                          </m:mtable>
                        </m:mfenced>
                        <m:mo stretchy="false">=</m:mo>
                        <m:msup>
                          <m:mi>A</m:mi>
